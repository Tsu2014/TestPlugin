<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/main_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">
        <Button
            android:id="@+id/main_button1"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:text="@string/main_btn1"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/main_button2"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:text="@string/main_btn2"
            android:layout_weight="1"
            android:layout_marginLeft="1dp"/>
        <Button
            android:id="@+id/main_button3"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:text="@string/main_btn3"
            android:layout_weight="1"
            android:layout_marginLeft="1dp"/>
        <Button
            android:id="@+id/main_button4"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:text="@string/main_btn4"
            android:layout_weight="1"
            android:layout_marginLeft="1dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>